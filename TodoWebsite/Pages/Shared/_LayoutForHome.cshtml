<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TodoWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LayoutForHomeCss.css"/>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="header">
        <a href="#default" class="logo">Logo</a>
        <div class="header-right">
            <a href="/Home">Home</a>
            <a href="/Notes">Notes</a>
        </div>
    </div>
    <main>
        <section class="main-section">
           
            <div class="content-container">
                @RenderBody()
            </div>
        </section>
    </main>
</body>
</html>
@RenderSection("InlineScripts", false)
<script type="text/javascript">
    $(document).ready(function () {
        var trigger = $('#sidebarControl'),
            sidebarContainer = $('.sidebar-part1'),
            contentContainer= $('.content-container'),
            iconSidebar= $('.icon-sidebar'),
            isClosed = true;
        contentContainer.css('padding-left', '260px');


    });
</script>