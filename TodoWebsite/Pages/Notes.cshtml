@page
@model TodoWebsite.Pages.NotesModel
@{
    Layout = "_LayoutForHome";
    var UserNotes = Model.UserNotes;
}

<input style="display: none" id="userId" value="@Model.UserId"/>

<div class="notes-container">
    <div id="note-container" class="notes-wrapper">


        @if (UserNotes != null)
        {
            var index = 0;
            foreach (var note in UserNotes)
            {

                <div class="notepad notepad-item">
                 
                    <label id="@note.id" style="display: none">@note.id</label>
                    <input class="top" contenteditable="true" asp-for="Notes" value=@note.topic/>
                    @*<input class="paper" contenteditable="true" asp-for="Content" value=@note.content  > *@
                    <textarea class="paper">@note.content
                    </textarea>
                    <button id="@index" class="btn btn-success" type="submit" class="saveNote" style="width:100%" onclick="noteSaveClick(this)">
                        Kaydet
                    </button>

                    <button class="btn btn-dark" type="submit" style="width:100%">
                            Sil
                     </button>
                   

                </div>
                index++;
            }
        }

        <div  class="notes-add-wrapper notepad-item" onclick="addNote()">
            <div class="notes-add-composer open-note-button">
                <i class="fa fa-plus"></i> Not Ekle
            </div>
        </div>
    </div>

</div>
